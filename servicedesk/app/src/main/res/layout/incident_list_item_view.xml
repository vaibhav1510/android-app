<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/incident_list_item_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp">
                <include
                    android:id="@+id/state"
                    layout="@layout/state1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/list_bg">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/customer_name"
                            android:text="Harshita Gupta" />

                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/asign_date"
                        android:layout_marginLeft="180dp"
                        android:text="Feb 10,2017" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/incident_id"
                        android:text="INCI201702010001"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/impect"
                        android:text="Impect"
                        android:layout_marginLeft="180dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="Ram not working"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:id="@+id/textView2"/>

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="I bought a laptop last month and i installed the graphics card but my RAM is not working properly."
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="Status"
                        android:textSize="10dp"
                        android:textColor="#FFFFFF"
                        android:background="#ef4772f2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="feb 10,2017"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textColor="#e72c2c"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
