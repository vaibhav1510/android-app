<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.mindsservicemanager.servicedesk.AddIncident">

<LinearLayout
    android:layout_width="340dp"
    android:layout_height="547dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center">


    <EditText android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Search"
        android:text=""
        android:textColor="@android:color/white"
        android:inputType="text"/>


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/Category"
        android:layout_height="wrap_content"
        android:layout_width="270dp"
        android:hint="Category"
        android:layout_alignParentStart="true"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/impect_Service"
        android:layout_height="wrap_content"
        android:layout_width="270dp"
        android:hint="Impect Service"
        android:layout_alignParentStart="true"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true" />


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/Urgency"
        android:layout_height="wrap_content"
        android:layout_width="270dp"
        android:hint="Urgency"
        android:layout_alignParentStart="true"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true" />


    <EditText android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Summary"
        android:textColor="@android:color/white"
        android:inputType="text"/>

    <EditText android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp"
        android:hint="Description"
        android:textColor="@android:color/white"
        android:inputType="text"
        />


    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addincident"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        />

</LinearLayout>

</LinearLayout>

