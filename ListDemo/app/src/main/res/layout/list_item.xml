<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="manageservice.listdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp">
                <include
                    android:id="@+id/state"
                    layout="@layout/state1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/list_bg">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/customer_name"
                            android:text="Customer Name"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/incident_id"
                            android:text="INCI201702010001"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="100dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:text="2/9/2017"
                            android:drawableBottom="@mipmap/ic_celendar"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/asign_date"
                            android:text="2-09-17"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/summary"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="Testing"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="Write description summary here.."
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text="State"
                        android:textSize="10dp"
                        android:textColor="#FFFFFF"
                        android:background="#ef4772f2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-09-17"
                        android:layout_marginLeft="100dp"
                        android:textColor="#e72c2c"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
